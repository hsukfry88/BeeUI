{
  "env": {
    "es6": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-plusplus": [0, { "allowForLoopAfterthoughts": true }],
    "no-unused-vars": [0, { "varsIgnorePattern": "[iI]gnored" }],
    "no-param-reassign": [0],
    "class-methods-use-this": [0]
  },
  "extends": "airbnb/base"
}
